<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gruposItens_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/shape_rectangle_background"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/grupositens_participantes"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_circle_blue"
        android:gravity="center"
        android:text="999"
        android:textColor="@color/colorWhite"
        android:textSize="22sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/grupositens_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estudar matemÃ¡tica"
                android:textColor="@color/colorPrimaryDark"
                android:textIsSelectable="true"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grupositens_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, ei mel simul dicam" />

            <TextView
                android:id="@+id/grupositens_criador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Criada por Guilherme Ramos," />

            <TextView
                android:id="@+id/grupositens_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="em 30/09/2018" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>