<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modal_resposta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/colorBlackLight" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fafafa"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/modal_resposta_fechar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resposta"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/modal_resposta_resposta"
            android:layout_width="290dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:hint="Digite aqui sua resposta"
            android:inputType="textCapSentences|textMultiLine" />

        <Button
            android:id="@+id/modal_resposta_responder"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_rectangle_btntarefa"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:text="Responder"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>